;;; Require:
(require 'csv)

;;; Code:
;; ==================================================================================
(defvar awesome-chatgpt-prompts nil "Awesome chatgpt prompts.")

(defvar awesome-chatgpt-prompts-file
  (concat (file-name-directory (or load-file-name buffer-file-name)) "prompts.csv")
  "Awesome chatgpt prompts file.")

(defun load-chatgpt-prompts ()
  (interactive)
  (let ((prompts-file awesome-chatgpt-prompts-file))
    (with-temp-buffer
      (insert-file-contents prompts-file)
      (let ((contents (csv-parse-buffer t)))
        (setq awesome-chatgpt-prompts
              (mapcar (lambda (row)
                        (cons (cdr (nth 0 row)) (cdr (nth 1 row))))
                      contents))))))

(defun get-chatgpt-prompt ()
  (interactive)
  (let ((prompt))
    (ivy-read "Select prompt: "
              awesome-chatgpt-prompts
              :action (lambda (item) (setq prompt (cdr item))))
    (insert prompt)))

(load-chatgpt-prompts)

;; ==================================================================================
;;; Provide features
(provide 'awesome-chatgpt-prompts)

