;;; Require:
(require 'csv)
(require 'ivy)
(require 'all-the-icons-ivy-rich)

;;; Code:
;; ==================================================================================
(defvar awesome-chatgpt-prompts nil "Awesome chatgpt prompts.")

(defvar awesome-chatgpt-prompts-file
  (concat (file-name-directory (or load-file-name buffer-file-name)) "prompts.csv")
  "Local awesome chatgpt prompts file.")

(defun initialize-awesome-chatgpt-prompts ()
  "Initialize awesome chatgpt prompts.

Initialize the `awesome-chatgpt-prompts' variable with prompts from
local awesome chatgpt prompts CSV file. The CSV file used is defined
 by the `awesome-chatgpt-prompts-file' variable."
  (let ((prompts-file awesome-chatgpt-prompts-file))
    (with-temp-buffer
      (insert-file-contents prompts-file)
      (let ((contents (csv-parse-buffer t)))
        (setq awesome-chatgpt-prompts
              (mapcar (lambda (row)
                        (cons (cdr (nth 0 row))
                              (cdr (nth 1 row))))
                      contents))))))

;; Initialize awesome chatgpt prompts
(initialize-awesome-chatgpt-prompts)

(defun get-awesome-chatgpt-prompt ()
  (interactive)
  (let ((prompt))
    (ivy-read "Select prompt: "
              awesome-chatgpt-prompts
              :action (lambda (item) (setq prompt (cdr item)))
              :caller 'get-awesome-chatgpt-prompt)
    (insert prompt)))

(setq all-the-icons-ivy-rich-display-transformers-list
      (append all-the-icons-ivy-rich-display-transformers-list
              '(get-awesome-chatgpt-prompt
                (:columns
                 ((all-the-icons-ivy-rich-variable-icon)
                  (ivy-rich-candidate (:width 0.20 :face all-the-icons-ivy-rich-type-face))
                  ((lambda (cand)
                     (concat (substring (cdr (assoc cand awesome-chatgpt-prompts)) 0 120) "..."))
                   (:face all-the-icons-ivy-rich-doc-face)))))))

(when all-the-icons-ivy-rich-mode
  (all-the-icons-ivy-rich-reload))

;; ==================================================================================
;;; Provide features
(provide 'awesome-chatgpt-prompts)

